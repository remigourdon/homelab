---
version: "2.1"
services:
  heimdall:
    image: linuxserver/heimdall
    container_name: heimdall
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/New_York
    volumes:
      - {{ project_dir }}/config:/config
    ports:
      - 80:80
      - 443:443
    restart: unless-stopped